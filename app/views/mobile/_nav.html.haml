%ul
	%li#mobile-search
		= render :partial => "/mobile/search"
		%i#search-icon.icon-search
	- if signed_in?
		%li.edit-profile
			%i.icon-user
			%span Edit Profile
		%li#sign_out_link.mobile_sign_out
			%i.icon-signout
			%span Sign Out
	- else
		%li.sign-up
			%i.icon-user
			%span Sign Up
		%li.sign-in
			%i.icon-signin
			%span Sign in
	%li.find-hydrants
		%i.icon-hydrant
		%span View Hydrants
	%li.about
		%i.icon-info-sign
		%span About
= render :partial => "layouts/flash", :locals => {:flash => flash}
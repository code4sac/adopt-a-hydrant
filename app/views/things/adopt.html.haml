%h2
  = t("titles.adopt", :thing => @thing.thing_title.titleize)
= form_for :thing, :url => things_path, :method => :put, :html => {:id => "adoption_form"} do |f|
  = f.hidden_field "id"
  = f.hidden_field "user_id", :value => current_user.id
  %fieldset.control-group
    = f.label "name", t("labels.name_thing", :thing => @thing.thing_title), :id => "thing_name_label"
    = f.text_field "name"
  %fieldset.control-group
    = f.submit t("buttons.adopt"), :class => "btn primary"
